# FR: Cle API Groq (obligatoire)
# EN: Groq API key (required)
GROQ_API_KEY=your_groq_api_key

# FR: Modele Groq (optionnel)
# EN: Groq model (optional)
GROQ_MODEL=openai/gpt-oss-120b

# FR: Temperature de generation (optionnel)
# EN: Generation temperature (optional)
GROQ_TEMPERATURE=0.2

# FR: URL backend pour le proxy Next.js
# EN: Backend URL used by the Next.js proxy
BACKEND_URL=http://backend:8001

# FR: Dossier base de connaissance (defaut: ./kb)
# EN: Knowledge base directory (default: ./kb)
KB_DIR=./kb

# FR: Chemin explicite index FAISS (prioritaire sur KB_DIR)
# EN: Explicit FAISS index path (overrides KB_DIR)
# KB_INDEX_PATH=./kb/kb.index.faiss

# FR: Chemin explicite metadonnees FAISS (prioritaire sur KB_DIR)
# EN: Explicit FAISS metadata path (overrides KB_DIR)
# KB_META_PATH=./kb/kb.index.meta.json

# FR: Nombre de passages recuperes
# EN: Number of retrieved passages
KB_TOP_K=4

# FR: Score minimal de similarite
# EN: Minimal similarity score
KB_MIN_SCORE=0.0
